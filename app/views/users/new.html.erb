<!-- register form -->
<section class="register-form"> 
  <div class="col s12">
  
    <%= form_for @user do |f| %> 

      <%= f.text_field :email, :placeholder => "email", class: "sign-input" %> 

      <%= f.text_field :name, :placeholder => "name", class: "sign-input" %> 

      <%= f.password_field :password, :placeholder => "password", class: "sign-input" %> 

      <%= f.password_field :password_confirmation, :placeholder => "password confirmation", class: "sign-input" %> 

    <% end %> 
  
  </div>

</section> 

