<!-- navbar -->
<nav>
  <div class="nav-wrapper blue-grey darken-2">
    <a href="#" class="brand-logo brand-name">Booty Builder</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><%= link_to 'Home', user_path(current_user) %></li> 
      <li><%= link_to 'Explore', photos_path %></li>
      <li><%= link_to 'Search', users_path %></li>
      <li><%= link_to 'Sign Out', logout_path, method: :delete %></li>
    </ul>
  </div>
</nav>

<!-- user profile -->
<div class="content-profile-page">
   <div class="profile-user-page card">
      <div class="img-user-profile">
        <img class="profile-bgHome" src="/images/lulu.jpg" />
        <!-- user profile photo -->
        <%= image_tag @user.avatar.url(:thumb) %> 
      </div>
      <div class="user-profile-data">
        <h1 id="user-name"><%= @user.name %></h1>
    </div> 
  </div>
</div>
<!-- end of user content -->

<!-- personal navigation for users -->
<nav id="navBottom"> 
  <ul id="navTxtBottom"> 
    <li class="nav-links"><%= link_to 'edit profile', edit_user_path %></li> 
    <li class="nav-links"><%= link_to 'add photo', new_photo_path %></li> 
    <li class="nav-links"><%= link_to 'create workout', workouts_path %></li> 
    <li class="nav-links"><%= link_to 'delete account', user_path(current_user), method: :delete, data: { confirm: 'Are you sure?'} %></li> 
  </ul> 
</nav><!-- end of navigation-->

<!-- user feed  -->
<div class="content">
  <h4 class="feed-text center-align">Photo Feed</h4>
  <ul id="feed-box">
    <% @user_photos.each do |photo| %> 
      <li>
        <div class="photo-wrapper">
          <div class="photo">
            <%= link_to image_tag(photo.image.url(:medium)), photo_path(photo.id), class: "feed-links" %>
            <%= photo.content %> 
          </div>
        </div>
      </li>
    <% end %> 
  </ul>
</div> <!-- end of user feed -->

<div class="clear-fix"></div>


<!-- footer content -->
<footer class="page-footer black">
  <div class="container center-align">
    <div class="row">
      <div class="col s12">
        <h5 class="white-text">Booty Builder</h5>
        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
      </div>
      <div class="col s12">
        <h5 class="white-text">Contact Us</h5>
      
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container center-align">
     Copyright 2015 Â© Booty Builder
      <a class="grey-text text-lighten-4 right" href="#!"></a>
    </div>
  </div>
</footer>
