<!-- edit form -->
<div id="user-edit"> 
  <h3>Edit Profile</h3>
  <%= form_for(@user, :html => { :class => "edit-form"} ) do |f| %> 
    <!-- user edit input -->
    <div class="row"> 
      <div class="col s12"> 
        <%= f.text_field :email, :placeholder => "email", class: "sign-input" %> 
      </div> 
      <div class="col s12"> 
        <%= f.text_field :name, :placeholder => "name", class: "sign-input" %> 
      </div> 
      <div class="col s12"> 
        <%= f.password_field :password, :placeholder => "password", class: "sign-input" %>
      </div>
      <div class="col s12"> 
        <%= f.password_field :password, :placeholder => "password confirmation", class: "sign-input" %> 
      </div> 
      <div class="col s12"> 
        <%= f.file_field :avatar, :placeholder => "profile photo", class: 'avatar-input' %> 
      </div>
      <%= f.submit "update", class: "edit-button" %> 
    </div> 
  <% end %> 
</div> <!-- end of user edit form -->



